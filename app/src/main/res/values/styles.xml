<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:actionBarStyle">@style/AppTheme.AppBar</item>
    </style>

    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorPrimary">?android:attr/textColorPrimary</item>
        <item name="colorAccent">?android:attr/textColorPrimary</item>
        <item name="itemTextColor">?android:attr/textColorPrimary</item>
        <item name="itemIconTint">?android:attr/textColorPrimary</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextStyle" />

    <style name="TextStyle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyle.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle.Gray">
        <item name="android:textColor">@color/body_text_color</item>
    </style>

    <style name="TextStyle.DarkGray">
        <item name="android:textColor">@color/subtitle_text_color</item>
    </style>

    <style name="TextStyle.White.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Black.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Black.SubTitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.DarkGray.SubTitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>